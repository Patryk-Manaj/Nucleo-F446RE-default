{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
      "label": "CMake Build",
      "type": "shell",
      "command": "cmake --build build -- -j4",
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": "$gcc",
      "detail": "Build the project using CMake"
    },
    {
      "label": "CMake Clean",
      "type": "shell",
      "command": "cmake --build build --target clean",
      "group": "build",
      "problemMatcher": []
    },
        {
            "label": "Build all",
            "group": "build",
            "type": "shell",
            "command": "make",
            "args": ["-j4","all"]
        },
        {
            "label": "Clean all",
            "group": "build",
            "type": "shell",
            "command": "make",
            "args": ["clean"]
        },
        {
            "label": "STFlash",
            "group": "build",
            "type": "shell",
            "command": "make",
            "args": ["-j4","stflash"]
        }
    ]
}